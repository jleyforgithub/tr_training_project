<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Start [Add Project field to Sale Order] -->
        <record id="sale_order_form" model="ir.ui.view">
            <field name="name">SaleOrder.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="tr_project_id"/>
                </field>
                <notebook position="inside">
                    <page string="Take Customer">
                        <field name="tr_take_customer_ids" context="{'default_name':partner_id, 'default_project_id':tr_project_id}"/>
                    </page>
                </notebook>
            </field>
        </record>
        <!-- End [Add Product field to Sale Order] -->
    </data>
</openerp>