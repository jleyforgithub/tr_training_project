<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Start [Take Customer Delete Unused Visit] -->
        <record id="take_customer_delete_unused_form" model="ir.ui.view">
            <field name="name">take_customer_delete_unused.form</field>
            <field name="model">tr.take.customer.wiz</field>
            <field name="arch" type="xml">
                <form string="Take Customer">
                    <field name="take_customer_ids">
                        <tree string="Take Customer">
                            <field name="date_visit"/>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="balance"/>
                            <field name="budget_use"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <footer>
                        <button
                                name="action_confirm_delete"
                                string="Confirm"
                                type="object"
                                class="oe_highlight"
                        />
                        <button
                                name="action_cancel_delete"
                                string="Cancel"
                                special="cancel"
                                class="oe_highlight"
                        />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_delete_unused_visit"
                    name="Delete Unused Visit"
                    res_model="tr.take.customer.wiz"
                    view_mode="form"
                    target="new"/>

        <menuitem id="delete_unused_visit_menu"
                  name="Delete Unused Visit"
                  action="action_delete_unused_visit"
                  parent="project_menu"
                  sequence="3" />
        <!-- End [Take Customer Delete Unused Visit]-->
    </data>
</odoo>